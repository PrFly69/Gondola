#library "respd"
#include "zcommon.acs"

function void RespawnTimeMessageFunc(int t) {
	SetFont("BIGFONT");
	HudMessage(s:"Respawn in: ", i:t; HUDMSG_PLAIN, 77, CR_WHITE, 0.5, 0.75, 0.1);
}

Script "DisplayRespawnTime" OPEN CLIENTSIDE
{
str v = strParam(s:"SV_RESPAWN",i:ConsolePlayerNumber());
int t;
while(true) {
	t = GetCvar(v);
	if(t>0) RespawnTimeMessageFunc(t);
	delay(1);
}
}